<Page x:Class="SummerPractise.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerPractise"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid Background="#F7B739">
        <DataGrid Name="Users" 
                  ItemsSource="{Binding}" 
                  AutoGenerateColumns="False" 
                  Margin="417,40,40,40" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"  Binding="{Binding name}"/>
                <DataGridCheckBoxColumn Header="Order Permission" Binding="{Binding order_permission}" />
                <DataGridCheckBoxColumn Header="Edit Permission" Binding="{Binding edit_permission}"  />
                <DataGridCheckBoxColumn Header="Is provider" Binding="{Binding is_provider}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
